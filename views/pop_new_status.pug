    New status popup content.

doctype html
html.pixel-ratio-1
    head
        meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
        |
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        |
        meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
        |
        link(rel="stylesheet", href="//cdn.bootcss.com/weui/1.1.1/style/weui.min.css")
        |
        link(rel="stylesheet", href="//cdn.bootcss.com/jquery-weui/1.0.1/css/jquery-weui.min.css")
    body(ontouchstart)
        .weui-cells(style="margin-top:0px")
            .weui-cell
                .weui-cell__bd
                    textarea.weui-textarea(placeholder="请输入" rows=5 style="font-family:-apple-system-font,Helvetica Neue,sans-serif")
            |
            .weui-cell
                p.weui-msg__desc #{address}
            |
            div(align="right" style="padding-right:15px; padding-bottom:5px")
                a.weui-btn.weui-btn_mini.weui-btn_primary(href="javascript:;" ) 发表
        |
        script(src="//cdn.bootcss.com/jquery/1.11.0/jquery.min.js")
        script(src="//cdn.bootcss.com/jquery-weui/1.0.1/js/jquery-weui.min.js")
        script.
            window.onload = function () {
                // 动态改变iframe大小
                var iframe = parent.document.getElementById("iframe");
                iframe.height = document.body.scrollHeight + 10;
            };
